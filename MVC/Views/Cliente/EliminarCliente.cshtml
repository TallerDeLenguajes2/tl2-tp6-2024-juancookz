@model Cliente
<h2>Eliminar cliente</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-action="BorrarCliente" asp-controller="Cliente" method="post">
    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" value="@Model.Nombre" class="form-control" type="text" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" value="@Model.Email" class="form-control" type="email" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Telefono">Telefono</label>
        <input asp-for="Telefono" value="@Model.Telefono" class="form-control" type="tel" readonly />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
    </div>
    <input type="hidden" asp-for="ClienteId" />
</form>