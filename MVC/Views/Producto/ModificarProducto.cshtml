@model Producto
<h2>Editar producto</h2>

<form asp-controller="Producto" asp-action="ActualizarProducto" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Descripcion">Descripci√≥n</label>
        <input asp-for="Descripcion" value="@Model.Descripcion" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" value="@Model.Precio" class="form-control" type="number" required />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Modificar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
    <input type="hidden" asp-for="Idproducto" />

</form>