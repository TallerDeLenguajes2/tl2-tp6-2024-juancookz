@model Producto
<h2>Crear producto</h2>
<form asp-action="CrearProducto" asp-controller="Producto" method="post">
    <div class="form-group">
        <label asp-for="Descripcion">Descripci√≥n</label>
        <input asp-for="Descripcion" class="form-control" required />
