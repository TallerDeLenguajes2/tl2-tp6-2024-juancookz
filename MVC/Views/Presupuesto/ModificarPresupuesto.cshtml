@model ModificarPresupuestoViewModel
<h2>@($"Presupuesto {Model.Presupuesto.Cliente.Nombre}")</h2>

<form asp-controller="Presupuesto" asp-action="AgregarProductoPresupuesto" method="post">
    <input type="hidden" asp-for="Presupuesto.IdPresupuesto" />

    <div class="form-group">
        <label for="productoSelect">Agregar producto:</label>
        <select asp-for="idProductoSeleccionado" name="idProductoSeleccionado" id="productoSelect" class="form-control"
            required>
            <option value="" selected>Seleccione un producto</option>
            @foreach (var producto in Model.Productos)
            {
                <option value="@producto.Idproducto">@producto.Descripcion</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="cantidad">Cantidad</label>
        <input asp-for="CantidadSeleccionada" name="cantidadSeleccionada" id="cantidad" class="form-control"
            type="number" required min="1" value="1" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary" style="margin: 5px;">Agregar Producto</button>
    </div>
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Eliminar</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model.Presupuesto.Detalle)
        {
            <tr>
                <td>@detalle.Producto.Descripcion</td>
                <td class="text-end p-2">
                    <!-- Remove Product -->
                    <form asp-controller="Presupuesto" asp-action="EliminarProducto" method="post" class="d-inline">
                        <input type="hidden" asp-for="idProductoSeleccionado" value="@detalle.Producto.Idproducto" />
                        <input type="hidden" asp-for="Presupuesto.IdPresupuesto" />
                        <a onclick="this.closest('form').submit();" class="link-opacity-100 text-danger"
                            style="cursor: pointer;">Eliminar</a>
                    </form>
                </td>
                <td>@detalle.Producto.Precio</td>
                <td>@detalle.Cantidad</td>
                <td>
                    <form asp-controller="Presupuesto" asp-action="SumarCantidadProducto" method="post"
                        style="display: inline;">
                        <input type="hidden" asp-for="Presupuesto.IdPresupuesto" />
                        <input type="hidden" asp-for="idProductoSeleccionado" value="@detalle.Producto.Idproducto" />
                        <button type="submit" class="btn btn-warning btn-sm">Sumar</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-controller="Presupuesto" asp-action="Listar" class="btn btn-secondary">Volver</a>
</div>