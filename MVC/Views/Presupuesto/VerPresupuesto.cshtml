@model Presupuesto
<h2>@($"Presupuesto {Model.NombreDestinatario}")</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model.Detalle)
        {
            <tr>
                <td>@detalle.Producto.Descripcion</td>
                <td>@detalle.Producto.Precio</td>
                <td>@detalle.Cantidad</td>
            </tr>
        }
    </tbody>
</table>
<table class="table table-bordered">
    <tbody>
        <tr>
            <th>Cantidad</th>
            <td>@Model.CantidadProductos()</td>
        </tr>
        <tr>
            <th>Subtotal (SIN IVA)</th>
            <td>@Model.MontoPresupuesto()</td>
        </tr>
        <tr>
            <th>Total (CON IVA 21%)</th>
            <td>@Model.MontoPresupuestoConIva()</td>
        </tr>
    </tbody>
</table>

<div class="text-center">
    <a asp-controller="Presupuesto" asp-action="Listar" class="btn btn-secondary">Volver</a>
</div>