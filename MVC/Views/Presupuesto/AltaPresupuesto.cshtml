@model Presupuesto
<h2>Crear presupuesto</h2>
<form asp-action="CrearPresupuesto" asp-controller="Presupuesto" method="post">
    <div class="form-group">
        <label asp-for="Cliente.ClienteId">Nombre</label>
        <input asp-for="Cliente.ClienteId" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="FechaCreacion">Fecha</label>
        <input asp-for="FechaCreacion" class="form-control" type="datetime-local"
            value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" readonly />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Crear Presupuesto</button>
        <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
    </div>
</form>