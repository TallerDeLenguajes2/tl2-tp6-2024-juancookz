@model Presupuesto
<h2>Eliminar presupuesto</h2>

<form asp-controller="Presupuesto" asp-action="BorrarPresupuesto" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Cliente.ClienteId">Nombre</label>
        <input asp-for="Cliente.ClienteId" value="@Model.Cliente.ClienteId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="FechaCreacion">Fecha de creacion</label>
        <input asp-for="FechaCreacion" value="@Model.FechaCreacion.ToString("yyyy-MM-ddTHH:mm")" class="form-control" type="datetime-local" readonly />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
    </div>
    <input type="hidden" asp-for="IdPresupuesto" />

</form>